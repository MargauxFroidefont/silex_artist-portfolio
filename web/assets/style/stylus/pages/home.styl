// home styl
.container
  width 900px
  margin 0 auto
  margin-top 30px

  .home-part
    width 400px
    display inline-block
    vertical-align top

    h1
      font-size 35px
      font-family "Cocomat-Light"
      margin-bottom 20px

    p
      font-family "Roboto"
      font-weight 300
      font-size 15px
      margin-bottom 7px
      line-height 1.5

      a
        color #9B9B9B

    .home-part-artwork-width
      color #9B9B9B

    .home-social-networks
      ul
        li
          display inline-block
          margin-right 25px
          a
            img
              margin-top 13px
              width 30px

    .home-button
      font-family 'Roboto'
      text-transform uppercase
      font-weight 500
      font-size 13px
      margin-top 17px
      width 201px
      height 32px
      border 1.5px solid #000
      padding 7px
      transition color .2s ease-out, background .2s ease-in

    .home-button:hover
      background-color #000
      color #fff
  .home-artist-informations
    margin-top 70px

  .home-artist-picture
    margin-left 40px

    img
      height 450px

// home media queries
@media (max-width: 900px)

  .container
    width 600px

    .home-part
      width 270px

    .home-artist-informations
      width 300px
      margin-top 40px

    .home-artist-picture
      margin-left 0px

      img
        height 300px

@media (max-width: 650px)
  .container
    width 100%

    .home-part
      display block

    .home-artist-informations
      width 300px
      margin 0 auto
      margin-top 30px
      margin-bottom 30px
      text-align center

      .home-button
        width 210px
        margin 0 auto
    .home-artist-picture
      width 220px
      margin 0 auto
      
      img
        margin-top 30px
